<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_port2"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fl_camera"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:layout_gravity="center_horizontal">
        <com.umi.twocamera.view.AutoFitTextureView
            android:id="@+id/texture_preview2"
            android:layout_width="96dp"
            android:layout_marginLeft="5dp"
            android:layout_gravity="right"
            android:layout_height="128dp"
            android:visibility="gone"/>
        <!--<SurfaceView
            android:id="@+id/surfaceview2"
            android:layout_width="96dp"
            android:layout_marginLeft="5dp"
            android:layout_gravity="right"
            android:layout_height="128dp"
            android:visibility="gone"/>-->

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.umi.twocamera.view.AutoFitTextureView
                android:id="@+id/texture_preview"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <!--<SurfaceView
                android:id="@+id/surfaceview1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />-->
        </FrameLayout>

        <!--<com.zqzn.android.face.processor.FaceRecBoxView
            android:id="@+id/camera_mask_view"
            android:layout_width="480dp"
            android:layout_height="640dp" />-->
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:gravity="center_vertical"
        android:focusable="false"
        android:orientation="vertical" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    >

                    <ImageView
                        android:id="@+id/iv_parent"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@mipmap/photo_bg" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_name_gv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="#b7a50e"
                        android:textSize="16dp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/tv_temperature"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:text=""
                        android:textSize="16dp"
                        android:textStyle="bold" />
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_yanzheng"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请靠近屏幕 "
                    android:textColor="#00D8DD"
                    android:textStyle="bold"
                    android:textSize="21dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical">
                <com.umi.twocamera.view.DigitalClock_new
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/item_bg"
                    android:textSize="16dp">
                </com.umi.twocamera.view.DigitalClock_new>
                <com.umi.twocamera.view.DigitalClock24_new
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/item_bg"
                    android:textSize="70dp">
                </com.umi.twocamera.view.DigitalClock24_new>

            </LinearLayout>

        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_deviceid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:textColor="@color/item_bg"
                android:textSize="20dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_peoplenum2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="人员数：0"
                    android:gravity="center"
                    android:textColor="@color/item_bg"
                    android:textSize="16dp"/>
                <TextView
                    android:id="@+id/tv_peoplenum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="人脸数：0"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:textColor="@color/item_bg"
                    android:textSize="16dp"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
