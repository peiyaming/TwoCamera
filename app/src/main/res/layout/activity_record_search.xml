<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_bg"
    android:orientation="vertical">
    <include layout="@layout/title"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="10sp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:orientation="horizontal">
        <Spinner
            android:id="@+id/spinner_simple"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:background="@drawable/rect_bg"
            android:entries="@array/study_view_spinner_values" />
        <EditText
            android:id="@+id/et_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="输入搜索内容"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="#00000000"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:textSize="16sp"
            android:textColor="@color/white"/>
    </LinearLayout>
<View
    android:layout_width="match_parent"
    android:layout_height="0.5dp"
    android:background="@android:color/darker_gray"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时间选择"
            android:textColor="@color/white"
            android:padding="10dp"
            android:textSize="18sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btn_auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="自定义"
                    android:textSize="18sp"
                    android:layout_margin="10dp"
                    android:background="@drawable/sel_btn"
                    android:textColor="@color/white"/>
                <Button
                    android:id="@+id/btn_zuotian"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="昨天"
                    android:layout_margin="10dp"
                    android:textSize="18sp"
                    android:background="@drawable/sel_btn"
                    android:textColor="@color/white"/>
                <Button
                    android:id="@+id/btn_benzhou"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="本周"
                    android:layout_margin="10dp"
                    android:textSize="18sp"
                    android:background="@drawable/sel_btn"
                    android:textColor="@color/white"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btn_shangzhou"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="上周"
                    android:layout_margin="10dp"
                    android:textSize="18sp"
                    android:background="@drawable/sel_btn"
                    android:textColor="@color/white"/>
                <Button
                    android:id="@+id/btn_benyue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="本月"
                    android:layout_margin="10dp"
                    android:textSize="18sp"
                    android:background="@drawable/sel_btn"
                    android:textColor="@color/white"/>
                <Button
                    android:id="@+id/btn_shangyue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="上月"
                    android:layout_margin="10dp"
                    android:textSize="18sp"
                    android:background="@drawable/sel_btn"
                    android:textColor="@color/white"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btn_all"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="全部"
                    android:layout_margin="10dp"
                    android:textSize="18sp"
                    android:background="@drawable/sel_btn"
                    android:textColor="@color/white"/>
            </LinearLayout>

        </LinearLayout>
         </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@android:color/darker_gray"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开始时间"
            android:textColor="@color/white"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/tv_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xxxx.xx.xx xx.xx"
            android:layout_alignParentRight="true"
            android:textColor="@color/white"
            android:textSize="18sp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@android:color/darker_gray"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="结束时间"
            android:textColor="@color/white"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/tv_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xxxx.xx.xx xx.xx"
            android:layout_alignParentRight="true"
            android:textColor="@color/white"
            android:textSize="18sp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@android:color/darker_gray"/>
